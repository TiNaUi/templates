.content,page {
    background: #f5f5f5;
}

.jiangqie-list-view {
    position: relative;
    z-index: 3;
}

.jiangqie-list-view-cat {
    margin-top: -80rpx;
}

.jiangqie-list-header {
    height: 400rpx;
    margin-bottom: 20rpx;
    width: 100%;
}

.jiangqie-list-bg {
    height: 100%;
    width: 100%;
}

.jiangqie-list-group-info {
    align-items: center;
    display: flex;
    left: 30rpx;
    position: absolute;
    top: 140rpx;
    z-index: 9;
}

.jiangqie-list-cover {
    flex: 0 0 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
    width: 120rpx;
}

.jiangqie-list-cover image {
    border-radius: 8rpx;
    height: 100%;
    width: 100%;
}

.jiangqie-list-cover-bg {
    height: 440rpx;
    overflow: hidden;
    position: relative;
}

.jiangqie-list-cover-mask {
    backdrop-filter: blur(7px);
    height: 440rpx;
    position: absolute;
    width: 100%;
    z-index: -1;
}

.jiangqie-list-cover-bg image {
    filter: blur(7px);
    height: 500rpx;
    margin-left: -2%;
    margin-top: -40rpx;
    width: 106%;
}

@supports (-webkit-overflow-scrolling:touch) {
    .jiangqie-list-cover-mask {
        z-index: 2;
    }

    .jiangqie-list-cover-bg image {
        filter: none;
    }
}

.jiangqie-list-text {
    width: 100%;
}

.jiangqie-list-text view {
    color: #fff;
    font-size: 24rpx;
    font-weight: 300;
}

.jiangqie-list-text view:nth-child(1) {
    font-size: 36rpx;
    font-weight: 600;
    margin-bottom: 10rpx;
}

.jiangqie-list-prix {
    color: #f40;
    font-size: 24rpx;
    font-weight: 300;
    padding-top: 12rpx;
}

.jiangqie-list-prix-big {
    margin-top: -52rpx;
    text-align: right;
}

.jiangqie-list-prix text {
    font-size: 32rpx;
    font-weight: 500;
    margin-right: 6rpx;
}

.jiangqie-list-info {
    padding-top: 20rpx;
}

.jiangqie-list-title {
    margin: 10rpx 0 20rpx;
}

.img-max .jiangqie-list-title {
    margin-top: 0;
}