.content,page {
    background: #f5f5f5;
}

.content {
    padding: 30rpx;
}

.jiangqie-user-set {
    background: #fff;
    border-radius: 12rpx;
    padding: 30rpx;
}

.jiangqie-user-set-line:nth-child(1) {
    border-bottom: 1rpx solid #eee;
    padding-bottom: 30rpx;
}

.jiangqie-user-set-line:nth-child(2) {
    padding-top: 30rpx;
}

.jiangqie-user-set-title {
    font-size: 36rpx;
    font-weight: 500;
    padding-bottom: 16rpx;
}

.jiangqie-user-set-line input {
    font-size: 28rpx;
    font-weight: 300;
}

.avatar-set {
    height: 160rpx;
    position: relative;
    width: 160rpx;
}

.avatar-set view {
    background: #363b51;
    border-radius: 50%;
    height: 48rpx;
    line-height: 48rpx;
    position: absolute;
    right: -24rpx;
    text-align: center;
    top: -24rpx;
    width: 48rpx;
    z-index: 3;
}

.avatar-choose {
    line-height: auto;
    padding: 0;
}

.avatar-choose,.avatar-choose image {
    border-radius: 12rpx;
    height: 160rpx;
    width: 160rpx;
}

.avatar-set-btn {
    background: #363b51;
    border-radius: 60rpx;
    color: #fff;
    font-size: 32rpx;
    font-weight: 500;
    line-height: 32rpx;
    margin: 40rpx auto;
    padding: 33rpx 40rpx;
    text-align: center;
    width: 86%;
}