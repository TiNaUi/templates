page {
    background-color: #000;
}

.page,page {
    height: 100%;
    width: 100%;
}

image {
    display: block;
}

.index {
    background-color: #000;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 2;
}

.indexImgCon {
    flex-shrink: 0;
    height: 360rpx;
    max-height: 360rpx;
    overflow: hidden;
    position: relative;
    width: 100%;
}

.indexImg {
    background: #ededed;
    border: 4rpx solid #dedeff;
    border-radius: 20rpx;
    height: 360rpx;
    width: 360rpx;
}

.indexVoiceIco {
    height: 120rpx;
    left: 50%;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 120rpx;
}

.nextIco {
    left: 30rpx;
}

.nextIco,.preIco {
    height: 72rpx;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 72rpx;
}

.preIco {
    right: 30rpx;
}

.myVideo {
    height: 100%;
    width: 100%;
}

.backIco {
    left: 16rpx;
    position: absolute;
    top: 50%;
    transform: rotateY(180deg) translateY(50%);
    width: 16rpx;
}

.indexTit {
    color: #fff;
    font-size: 32rpx;
    font-weight: 700;
    height: 100%;
    width: 100%;
}

.saveBtnCon {
    flex-shrink: 0;
    margin-top: 32rpx;
    width: 100%;
}

.saveBtnConImg {
    flex-shrink: 0;
    height: 90rpx;
    margin: 0 6rpx;
    width: 350rpx;
}

.saveDesc {
    color: #d02020;
    font-size: 20rpx;
    margin-top: 20rpx;
}

.saveCon {
    background-color: rgba(0,0,0,.8);
    height: 100%;
    left: 0;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 100;
}

.saveInfo {
    background: #fff;
    border-radius: 20rpx;
    height: max-content;
    padding: 80rpx 30rpx 60rpx;
    position: relative;
    width: 650rpx;
}

.saveCloseIco {
    height: 42rpx;
    position: absolute;
    right: 30rpx;
    top: -66rpx;
    width: 42rpx;
}

.saveItem {
    width: 100%;
}

.saveItemInfo {
    flex-shrink: 0;
    width: 350rpx;
}

.saveTit {
    color: #000;
    font-size: 34rpx;
    font-weight: 700;
    margin-bottom: 30rpx;
}

.saveTxt {
    color: #afafb3;
    font-size: 26rpx;
}

.saveBtn {
    background: #2d2100;
    border-radius: 20rpx;
    color: #fadd9b;
    font-size: 28rpx;
    height: 76rpx;
    width: 220rpx;
}

.saveBtn1 {
    background-color: #ffb70c;
    margin-right: 32rpx;
}

.saveBtn1,.saveBtn2 {
    border-radius: 100rpx;
    color: #fff;
    font-size: 28rpx;
    justify-content: center;
    padding: 16rpx 0;
    text-align: center;
    width: 320rpx;
}

.saveBtn2 {
    background: linear-gradient(0deg,#6f5ce3,#6f5ce3);
}

.save-tip {
    color: #999;
    font-size: 24rpx;
    margin-bottom: 20rpx;
    margin-top: 20rpx;
    text-align: center;
    width: 100%;
}

.save-ico {
    height: 42rpx;
    width: 42rpx;
}

.saveBtnIco {
    height: 28rpx;
    margin-right: 10rpx;
    width: 30rpx;
}

.saveItem1 {
    margin-top: 40rpx;
}

.saveItem1 .saveBtn {
    background: #c8c8cc;
}

.saveItem1 .saveBtnIco {
    height: 26rpx;
    margin-right: 10rpx;
    width: 26rpx;
}

button {
    line-height: 0;
}

.hotList {
    padding: 24rpx;
    position: absolute;
    top: 540rpx;
    width: 100%;
}

.hotList .hotTitIco {
    filter: invert(100%);
    height: 36rpx;
    margin-right: 10rpx;
    width: 30rpx;
}

.hotList .hotTit {
    color: #fff;
    font-size: 32rpx;
}

.hotList .list {
    flex-wrap: wrap;
    margin-top: 34rpx;
    width: 100%;
}

.hotList .item {
    background: #ccc;
    border: 4rpx solid #fafafa;
    border-radius: 20rpx;
    flex-shrink: 0;
    height: 160rpx;
    margin-bottom: 24rpx;
    margin-right: 20rpx;
    opacity: 1;
    overflow: hidden;
    position: relative;
    transition: .2s;
    width: 160rpx;
}

.hotList .items {
    background-color: #6f5ce3;
    border: 4rpx solid #6f5ce3;
    overflow: hidden;
}

.hotList .item:nth-child(4n) {
    margin-right: 0;
}

.hotList .itemImg {
    height: 100%;
    width: 100%;
}

.hotList .voiceIco {
    bottom: 12rpx;
    height: 34rpx;
    left: 12rpx;
    position: absolute;
    width: 34rpx;
}

.item .item-selected {
    background-color: #e42709;
    height: 100%;
    left: 0;
    opacity: .8;
    position: absolute;
    top: 0;
    width: 100%;
    z-index: 1;
}

.item .item-selected image {
    height: 60rpx;
    width: 60rpx;
}